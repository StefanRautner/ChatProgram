<Window x:Class="Second_Client_WPF.MessageDeleteUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Second_Client_WPF"
        mc:Ignorable="d"
        Title="Message" Height="224" Width="224" Icon="/icon.png" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <TextBlock HorizontalAlignment="Left" Margin="27,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"><Run Text="Neue"/><Run Text="n"/><Run Text=" Nachricht"/><Run Text="en"/><Run Language="de-at" Text="inhalt"/><Run Text=" eingeben"/></TextBlock>
        <TextBox x:Name="NeueNachricht" HorizontalAlignment="Left" Margin="35,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Click="NachrichtUpdaten" Content="Aktualisieren" HorizontalAlignment="Left" Margin="27,115,0,0" VerticalAlignment="Top"/>
        <Button Click="NachrichtEntfernen" Content="Löschen" HorizontalAlignment="Left" Margin="115,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.171,0.489"/>
        <Button Content="Zurück" Click="GoToMainWindow" HorizontalAlignment="Left" Margin="148,160,0,0" VerticalAlignment="Top" Width="47"/>
    </Grid>
</Window>
